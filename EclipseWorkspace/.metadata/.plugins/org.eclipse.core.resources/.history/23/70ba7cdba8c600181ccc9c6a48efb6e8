package dEV_02_10_18;

public class findpalidrom {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		
		int num=121;
		int rev=0;
		int rem;
		
		while(num>0)
		{
			rem=num%10;
			rev=rev*10+rem;
			num=num/10;
		}
		if(rev==num)
		{
			System.out.println("Number is Polidrem"+num);
		}
		else
		{
			System.out.println("Number is not Polidrem"+num);
		}
	}

}
